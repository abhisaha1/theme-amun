.dropdown-submenu {
    position: relative;
}

.dropdown-submenu > .dropdown-menu {
    top: 0;
    left: 100%;
    margin-top: -6px;
    margin-left: -1px;
    -webkit-border-radius: 0 6px 6px 6px;
    -moz-border-radius: 0 6px 6px;
    border-radius: 0 6px 6px 6px;
}

.dropdown-submenu:hover > .dropdown-menu {
    display: block;
}

.dropdown-submenu > a:after {
    display: block;
    content: " ";
    float: right;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid;
    border-width: 5px 0 5px 5px;
    border-left-color: #ccc;
    margin-top: 5px;
    margin-right: -10px;
}

.dropdown-submenu:hover > a:after {
    border-left-color: #fff;
}

.dropdown-submenu.pull-left {
    float: none;
}

.dropdown-submenu.pull-left > .dropdown-menu {
    left: -100%;
    margin-left: 10px;
    -webkit-border-radius: 6px 0 6px 6px;
    -moz-border-radius: 6px 0 6px 6px;
    border-radius: 6px 0 6px 6px;
}

:root {
    --color-text-primary: #333333;
    --color-text-primary-invert: #333;
    --color-text-primary-light: #616161;
    --color-text-muted: rgb(185, 185, 185);
    --color-text-secondary: #000000;
    --color-text-secondary-light: #4c4c4c;
    --color-accent: #2196f3;
    --color-bg-primary: #27282f;
    --color-bg-secondary: #fff;
    --color-border: #e5e5e5;
    --link-hover: #1a82d6;
    --color-menu-link: #797979;

    --fs-small: 12px;
    --fs-normal: 14px;
    --fs-medium: 16px;
    --fs-large: 18px;
}

body {
    background: #fff;
}
header {
    grid-area: header;
}

nav {
    grid-area: nav;
}

main {
    grid-area: content;
}

aside {
    grid-area: side;
}

.centered {
    &.main {
        display: grid;
        grid-template-areas:
            "nav nav nav nav nav"
            "header header header header header"
            " . content content content ."
            "footer footer footer footer footer";
        grid-template-columns: 2fr repeat(3, minmax(auto, 368px)) 2fr;
        grid-template-rows: auto 1fr 1fr auto;
        height: 100vh;

        nav .sidebar {
            position: relative;
            width: auto;
        }
    }

    @media (max-width: 991px) {
        &.main {
            grid-template-areas:
                "nav"
                "header"
                "content"
                "footer";

            grid-template-columns: 1fr;
            grid-template-rows:
                auto
                minmax(400px, auto)
                1fr
                minmax(75px, auto)
                auto; /* Footer */

            main {
                margin: 0;
            }
        }

        aside {
            display: none;
        }
    }
}

.hero {
    height: 600px;
    background-repeat: no-repeat;
    background-size: cover;
    margin-top: -60px;
    .site-header-content {
        background: rgba(0, 0, 0, 0.36);
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: #fff;

        h1.site-title {
            font-size: 3em;
        }
        h2.site-description {
            color: #bfbdbd;
            font-size: 1.2rem;
            letter-spacing: 9px;
        }
    }
}

.post-grid:not(.with-padding) .post {
    border: 1px solid #eee;
}

h1.site_title {
    line-height: 50px;
    margin-left: 65px;
}
